@model IQuestion
<h1>@Model.Title</h1>
<fieldset class="custom-controls">
    <legend class="show-for-sr">@Model.ShortTitle</legend>
    @Html.Raw(Model.Description)
    <div class="answers">
        @foreach (var answer in Model.AnswerList)
        {
            <div>
                @Html.RadioButton("answer", answer.Id, new { id = "answer" + answer.Id, @class = @answer.CssClass })
                @Html.Label("answer" + answer.Id, answer.Title)
                @if (!string.IsNullOrWhiteSpace(answer.Description))
                {
                    <div id="tip-@answer.Id" class="registration-tip hide" role="status">
                        @Html.Raw(answer.Description)
                    </div>
                }
            </div>
        }
    </div>
</fieldset>